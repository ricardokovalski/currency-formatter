{
    "name": "ricardokovalski/money-formatter",
    "description": "Biblioteca para formatar valores monetÃ¡rios.",
    "type": "library",
    "authors": [
        {
            "name": "Ricardo Kovalski",
            "email": "ricardokovalskicruz@gmail.com",
            "role": "Maintainer"
        }
    ],
    "license": "MIT",
    "keywords": ["currency", "currencies", "decimal", "decimal-numbers", "formatter", "intl", "money", "php"],
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "ext-intl": "*",
        "moneyphp/money": "^3.3",
        "ricardokovalski/locale": "v1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "check-style": "php-cs-fixer fix --diff --verbose --dry-run .",
        "fix-style": "php-cs-fixer fix ."
    },
    "autoload": {
        "psr-4": {
            "RicardoKovalski\\MoneyFormatter\\": "src/"
        },
        "files": [
            "src/Support/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RicardoKovalski\\MoneyFormatter\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
