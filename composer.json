{
  "name": "ricardokovalski/currency-formatter",
  "description": "A simple Currency Formatter",
  "type": "library",
  "authors": [
    {
      "name": "Ricardo Kovalski",
      "email": "ricardokovalskicruz@gmail.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "keywords": ["currency", "currencies", "decimal", "decimal-numbers", "formatter", "intl", "money", "php"],
  "require": {
    "php": ">=5.6",
    "ext-json": "*",
    "ext-intl": "*",
    "moneyphp/money": "^3.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "RicardoKovalski\\CurrencyFormatter\\": "src/"
    },
    "files": [
      "src/Support/Helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "RicardoKovalski\\CurrencyFormatter\\Tests\\": "tests/"
    }
  }
}
